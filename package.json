{
  "name": "mithril-transition",
  "version": "2.3.1",
  "description": "A lightweight library for MithrilJS to create your own custom transitions based on the lifecycle of your components.",
  "main": "dist/index.js",
  "devDependencies": {
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "~7.2.0",
    "browserify": "~13.0.0",
    "conventional-changelog-cli": "^1.1.1",
    "eslint": "^2.5.1",
    "eslint-config-tinchoz49": "^2.0.1",
    "iron-node": "^2.2.15",
    "live-server": "^0.9.2",
    "mithril": "~0.2.2-rc.1",
    "uglifyjs": "^2.4.10",
    "velocity-animate": "~1.2.2",
    "watchify": "^3.7.0"
  },
  "files": [
    "dist/index.js",
    "dist/index.css"
  ],
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "test": "eslint src",
    "build": "eslint src && npm run clean && browserify src/index.js -o dist/index.js && npm run standalone && cp src/index.css dist/index.css",
    "start": "npm run clean && watchify example/index.js -o example/build.js -v & live-server example",
    "prepublish": "npm run build",
    "preversion": "npm run build",
    "version": "conventional-changelog -i CHANGELOG.md --same-file && git add .",
    "debug": "iron-node npm start",
    "standalone": "browserify src/index.js --standalone mithrilTransition | uglifyjs > dist/mithril-transition.umd.js"
  },
  "eslintConfig": {
    "extends": "tinchoz49",
    "globals": {
      "sessionStorage": true,
      "document": true
    }
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ],
          "plugins": [
            "add-module-exports"
          ]
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geut/mithril-transition.git"
  },
  "keywords": [
    "mithriljs",
    "css",
    "velocityjs",
    "transitions",
    "animations"
  ],
  "author": "Geut <geut.studio@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geut/mithril-transition/issues"
  },
  "homepage": "https://github.com/geut/mithril-transition#readme"
}
